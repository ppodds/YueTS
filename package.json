{
  "name": "yuets",
  "version": "1.0.0",
  "description": "A TypeScript rewrite version of Discord bot Yue.",
  "scripts": {
    "build": "npm run clean && tsc",
    "watch": "tsc --watch",
    "deploy-cmd": "node ./dist/deploy-commands.js",
    "start": "node --no-deprecation --no-warnings ./dist/index.js",
    "dev": "npm run deploy-cmd && concurrently 'npm run watch' 'nodemon ./dist/index.js'",
    "prod": "npm run build && npm run deploy-cmd  && npm run start",
    "test": "jest",
    "clean": "rm -rf dist/*",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ppodds/YueTS.git"
  },
  "author": "ppodds",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ppodds/YueTS/issues"
  },
  "lint-staged": {
    "*.{ts,js,cjs,mjs}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "homepage": "https://github.com/ppodds/YueTS#readme",
  "dependencies": {
    "@discordjs/builders": "^0.13.0",
    "@discordjs/opus": "^0.7.0",
    "@discordjs/rest": "^0.4.1",
    "@discordjs/voice": "^0.9.0",
    "async-lock": "^1.3.1",
    "axios": "^0.26.1",
    "bufferutil": "^4.0.6",
    "canvas": "^2.9.1",
    "discord-api-types": "^0.32.1",
    "discord.js": "^13.6.0",
    "discord.js-message-listener": "^1.2.2",
    "ffmpeg-static": "^5.0.0",
    "file-type": "^16.5.3",
    "log4js": "^6.4.2",
    "mariadb": "^3.0.0",
    "node-worker-threads-pool": "^1.5.1",
    "play-dl": "^1.9.4",
    "sequelize": "^6.17.0",
    "sharp": "^0.30.2",
    "sodium": "^3.0.2",
    "utf-8-validate": "^5.0.9",
    "ytpl": "^2.3.0",
    "ytsr": "^3.8.0",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@types/async-lock": "^1.1.3",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.32",
    "@types/sequelize": "^4.28.11",
    "@types/sharp": "^0.30.2",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
